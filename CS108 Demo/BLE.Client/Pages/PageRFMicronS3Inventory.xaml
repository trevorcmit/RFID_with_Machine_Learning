              <RowDefinition Height="50"/>
              <RowDefinition Height="50"/>
              <RowDefinition Height="*"/>
          </Grid.RowDefinitions>
          <StackLayout Grid.Row="0" Orientation="Horizontal">
              <Button Margin="6" Command="{Binding OnTestCommand}" Text="Test Adding to Chart"/>
          </StackLayout> -->
